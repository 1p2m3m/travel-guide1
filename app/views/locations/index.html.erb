<div class="heading">
  <h1>All of my Locations </h1>
    <p><%= link_to "Add New Location", new_location_path %> </p>
</div>

<div class="location">
  <% @location.each do |location| %>
    <div class="heading">
      <h2><%= link_to location.title, location_path(location) %></h2>
      <p> <%= location.subtitle %></p>
      <p><%= image_tag image_url(location.header_image), :size => "260x180" %></p>
      <p> <%= location.description %></p>
    </div>
    <hr>
  <% end %>
</div>
